############################
# Lists and Tables
############################
snippet itz "itemize" b
\begin{itemize}
\item $1
\end{itemize}
endsnippet


snippet enu "enumerate" b
\begin{enumerate}
\item $1
\end{enumerate}
endsnippet


snippet tab "table env" b
\begin{table}[${1:ht}]
\centering
\begin{tabular}{${2:c c}}
$3 \\
\end{tabular}
\caption{$4}
\label{tab:${5:label}}
\end{table}
endsnippet


snippet tbr "tabular" b
\begin{tabular}{${1:c c}}
$2 \\
\end{tabular}
endsnippet
