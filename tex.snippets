# UltiSnips LaTeX snippets for math note taking
# Filetype: tex

priority 10

############################
# advanced math environments
############################
# Name: Definition (Calculus/Algebra)
# Trigger: def
# Description: Numbered definition with optional label and title

snippet def "Definition" b
\begin{definition}[${1:Optional Title}]${2:{\label{def:${3:name}}}}
	${0:${VISUAL}}
\end{definition}
endsnippet

snippet theorem "Theorem environment" b
\begin{theorem}${1:[label]}${2:[\textup{(${3:name})}]}
	${4:${VISUAL}}
\end{theorem}
endsnippet

############################
# Basic math environments
############################

snippet mm "inline math" i
\\$$1$$0
endsnippet
snippet eq "equation environment" b
\\begin{equation}
    $1
\\end{equation}
endsnippet

snippet aln "align environment" b
\\begin{align}
    $1
\\end{align}
endsnippet

snippet cas "cases environment" b
\\begin{cases}
    $1
\\end{cases}
endsnippet

snippet pmat "pmatrix" b
\\begin{pmatrix}
    $1
\\end{pmatrix}
endsnippet

snippet bmat "bmatrix" b
\\begin{bmatrix}
    $1
\\end{bmatrix}
endsnippet

############################
# Common math commands
############################
snippet ff "fraction" i
\\frac{$1}{$2}$0
endsnippet

snippet sq "square root" i
\\sqrt{$1}$0
endsnippet

snippet abs "absolute value" i
\\lvert $1 \\rvert$0
endsnippet

snippet norm "norm" i
\\lVert $1 \\rVert$0
endsnippet

snippet sum "sum" i
\\sum_{${1:i=1}}^{${2:n}} $0
endsnippet

snippet prod "product" i
\\prod_{${1:i=1}}^{${2:n}} $0
endsnippet

snippet lim "limit" i
\\lim_{${1:n \\to \\infty}} $0
endsnippet

snippet int "integral" i
\\int_{${1:a}}^{${2:b}} $0 \\, d${3:x}
endsnippet

snippet dint "indef integral" i
\\int $1 \\, d${2:x}
endsnippet

